<style is:global>
	.about-page {
		width: 960px;
		max-width: calc(100% - 2em);
		margin: 0 auto;
		padding: 1em 1em 3em;
	}

	.about-page h1, .about-page h2, .about-page h3 { margin: 0; line-height: 1.2; color: rgb(var(--black)); }
	.about-page p { margin: 0; }
	.about-page a { text-decoration: none; }

	/* Hero */
	.about-hero {
		position: relative;
		padding: 4em 0 3em;
		overflow: hidden;
	}

	.about-glow {
		position: absolute;
		top: -100px;
		right: -100px;
		width: 500px;
		height: 500px;
		background: radial-gradient(circle, rgba(35, 55, 255, 0.08) 0%, transparent 70%);
		pointer-events: none;
	}

	.about-hero-content {
		position: relative;
		z-index: 1;
		display: flex;
		align-items: center;
		gap: 3em;
	}

	.about-hero-text { flex: 1; }

	.about-badge {
		display: inline-block;
		padding: 0.35em 1em;
		font-size: 0.7em;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		color: var(--accent);
		background: rgba(35, 55, 255, 0.06);
		border: 1px solid rgba(35, 55, 255, 0.15);
		border-radius: 100px;
		margin-bottom: 1.5em;
	}

	.about-title {
		font-size: 3em;
		letter-spacing: -0.03em;
		line-height: 1.1;
		margin-bottom: 0.6em;
	}

	.about-gradient {
		background: linear-gradient(135deg, var(--accent) 0%, #6366f1 40%, #8b5cf6 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.about-intro {
		font-size: 1.05em;
		line-height: 1.7;
		color: rgb(var(--gray));
	}

	.about-intro strong { color: rgb(var(--gray-dark)); }

	.about-image {
		position: relative;
		flex-shrink: 0;
	}

	.about-image img {
		width: 220px;
		height: 220px;
		object-fit: cover;
		border-radius: 50%;
		position: relative;
		z-index: 1;
		border: 3px solid white;
		box-shadow: 0 8px 32px rgba(var(--gray), 20%);
	}

	.about-ring {
		position: absolute;
		top: -6px; left: -6px; right: -6px; bottom: -6px;
		border-radius: 50%;
		background: linear-gradient(135deg, var(--accent), #8b5cf6);
		opacity: 0.15;
	}

	/* Sections */
	.about-section { margin: 3em 0; }

	.about-section-title {
		font-size: 1.6em;
		letter-spacing: -0.02em;
		margin-bottom: 1.2em;
	}

	/* Roles */
	.roles-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1em;
	}

	.role-card {
		display: flex;
		align-items: center;
		gap: 1em;
		background: white;
		border: 1px solid rgb(var(--gray-light));
		border-radius: 14px;
		padding: 1.3em 1.5em;
		transition: all 0.3s ease;
	}

	.role-card:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(var(--gray), 12%);
		border-color: rgba(35, 55, 255, 0.12);
	}

	.role-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 44px;
		height: 44px;
		border-radius: 12px;
		background: linear-gradient(135deg, rgba(35, 55, 255, 0.07), rgba(139, 92, 246, 0.07));
		color: var(--accent);
		flex-shrink: 0;
	}

	.role-info { display: flex; flex-direction: column; }

	.role-org {
		font-size: 0.95em;
		font-weight: 700;
		color: rgb(var(--black));
		transition: color 0.2s;
	}

	.role-org:hover { color: var(--accent); }

	.role-title {
		font-size: 0.78em;
		color: rgb(var(--gray));
		font-weight: 500;
	}

	/* Links */
	.links-grid {
		display: flex;
		flex-direction: column;
		gap: 0.8em;
	}

	.link-card {
		display: flex;
		align-items: center;
		gap: 1em;
		background: white;
		border: 1px solid rgb(var(--gray-light));
		border-radius: 14px;
		padding: 1.2em 1.5em;
		transition: all 0.3s ease;
		color: rgb(var(--gray-dark));
	}

	.link-card:hover {
		transform: translateX(4px);
		box-shadow: 0 4px 16px rgba(var(--gray), 10%);
		border-color: rgba(35, 55, 255, 0.12);
		color: var(--accent);
	}

	.link-card > svg:first-child {
		flex-shrink: 0;
		width: 24px;
		height: 24px;
	}

	.link-card div { flex: 1; display: flex; flex-direction: column; }

	.link-name {
		font-size: 0.95em;
		font-weight: 700;
		color: rgb(var(--black));
	}

	.link-handle {
		font-size: 0.8em;
		color: rgb(var(--gray));
	}

	.link-arrow {
		flex-shrink: 0;
		color: rgb(var(--gray-light));
		transition: all 0.3s ease;
	}

	.link-card:hover .link-arrow {
		color: var(--accent);
		transform: translate(2px, -2px);
	}

	/* CTA */
	.about-cta {
		position: relative;
		text-align: center;
		padding: 4em 2em;
		margin: 3em 0 0;
		background: linear-gradient(135deg, #0f0f1a 0%, #151528 50%, #1a1a35 100%);
		border-radius: 24px;
		overflow: hidden;
	}

	.about-cta-glow {
		position: absolute;
		top: -80px;
		right: -80px;
		width: 400px;
		height: 400px;
		background: radial-gradient(circle, rgba(99, 102, 241, 0.15) 0%, transparent 70%);
		pointer-events: none;
	}

	.about-cta-eyebrow {
		position: relative; z-index: 1;
		font-size: 0.85em;
		color: #a78bfa;
		font-weight: 600;
		margin-bottom: 0.8em;
	}

	.about-cta-heading {
		position: relative; z-index: 1;
		color: white;
		font-size: 2em;
		line-height: 1.25;
		margin-bottom: 1.2em;
		letter-spacing: -0.02em;
	}

	.about-gradient-light {
		background: linear-gradient(135deg, #818cf8, #a78bfa, #c084fc);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.about-cta-actions {
		position: relative; z-index: 1;
		display: flex;
		gap: 1em;
		justify-content: center;
		flex-wrap: wrap;
	}

	.about-btn-primary {
		display: inline-flex;
		align-items: center;
		gap: 0.5em;
		padding: 0.8em 2em;
		font-size: 0.92em;
		font-weight: 700;
		color: rgb(var(--black));
		background: white;
		border-radius: 12px;
		transition: all 0.3s ease;
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
	}

	.about-btn-primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
		color: rgb(var(--black));
	}

	.about-btn-primary svg { transition: transform 0.3s ease; }
	.about-btn-primary:hover svg { transform: translateX(3px); }

	.about-btn-ghost {
		display: inline-flex;
		align-items: center;
		padding: 0.8em 2em;
		font-size: 0.92em;
		font-weight: 600;
		color: rgba(255, 255, 255, 0.8);
		background: rgba(255, 255, 255, 0.08);
		border: 1px solid rgba(255, 255, 255, 0.15);
		border-radius: 12px;
		transition: all 0.3s ease;
	}

	.about-btn-ghost:hover {
		background: rgba(255, 255, 255, 0.15);
		color: white;
		transform: translateY(-2px);
	}

	/* Responsive */
	@media (max-width: 768px) {
		.about-hero-content {
			flex-direction: column-reverse;
			text-align: center;
			gap: 2em;
		}

		.about-title { font-size: 2.2em; }

		.about-image img { width: 160px; height: 160px; }

		.roles-grid { grid-template-columns: 1fr; }

		.about-cta { padding: 3em 1.5em; }
		.about-cta-heading { font-size: 1.5em; }
	}
</style>
