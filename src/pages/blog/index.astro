---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const featured = posts[0];
const rest = posts.slice(1);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Blog â€” ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<div class="blog-page">
			<!-- Hero -->
			<section class="blog-hero">
				<div class="blog-glow"></div>
				<span class="blog-badge">Blog</span>
				<h1 class="blog-title">Thoughts & <span class="blog-gradient">Insights</span></h1>
				<p class="blog-desc">Writing about Node.js internals, performance optimization, open source, and software engineering.</p>
			</section>

			<!-- Featured -->
			{featured && (
				<a href={`/blog/${featured.id}/`} class="blog-featured">
					<img src={featured.data.heroImage} alt={featured.data.title} class="blog-featured-img" />
					<div class="blog-featured-overlay">
						<span class="blog-featured-tag">{featured.data.tag}</span>
						<h2 class="blog-featured-title">{featured.data.title}</h2>
						<p class="blog-featured-desc">{featured.data.description}</p>
						<span class="blog-featured-date"><FormattedDate date={featured.data.pubDate} /></span>
					</div>
				</a>
			)}

			<!-- Posts Grid -->
			{rest.length > 0 && (
				<div class="blog-grid">
					{rest.map((post) => (
						<a href={`/blog/${post.id}/`} class="blog-card">
							<img src={post.data.heroImage} alt={post.data.title} class="blog-card-img" />
							<div class="blog-card-info">
								<span class="blog-card-tag">{post.data.tag}</span>
								<h3 class="blog-card-title">{post.data.title}</h3>
								<p class="blog-card-excerpt">{post.data.description}</p>
								<span class="blog-card-date"><FormattedDate date={post.data.pubDate} /></span>
							</div>
						</a>
					))}
				</div>
			)}
		</div>
		<Footer />
	</body>
</html>

<style is:global>
	.blog-page {
		width: 1040px;
		max-width: calc(100% - 2em);
		margin: 0 auto;
		padding: 1em 1em 3em;
	}

	.blog-page h1, .blog-page h2, .blog-page h3 { margin: 0; line-height: 1.2; color: rgb(var(--black)); }
	.blog-page p { margin: 0; }
	.blog-page a { text-decoration: none; color: inherit; }

	/* Hero */
	.blog-hero {
		position: relative;
		text-align: center;
		padding: 4em 1em 3em;
		overflow: hidden;
	}

	.blog-glow {
		position: absolute;
		top: -120px;
		left: 50%;
		transform: translateX(-50%);
		width: 600px;
		height: 600px;
		background: radial-gradient(circle, rgba(35, 55, 255, 0.08) 0%, transparent 70%);
		pointer-events: none;
	}

	.blog-badge {
		position: relative; z-index: 1;
		display: inline-block;
		padding: 0.35em 1em;
		font-size: 0.7em;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		color: var(--accent);
		background: rgba(35, 55, 255, 0.06);
		border: 1px solid rgba(35, 55, 255, 0.15);
		border-radius: 100px;
		margin-bottom: 1.5em;
	}

	.blog-title {
		position: relative; z-index: 1;
		font-size: 3em;
		letter-spacing: -0.03em;
		margin-bottom: 0.4em;
	}

	.blog-gradient {
		background: linear-gradient(135deg, var(--accent) 0%, #6366f1 40%, #8b5cf6 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.blog-desc {
		position: relative; z-index: 1;
		font-size: 1.05em;
		color: rgb(var(--gray));
		max-width: 520px;
		margin: 0 auto;
		line-height: 1.6;
	}

	/* Featured */
	.blog-featured {
		display: block;
		position: relative;
		border-radius: 20px;
		overflow: hidden;
		margin-bottom: 2em;
		transition: all 0.3s ease;
	}

	.blog-featured:hover {
		transform: translateY(-3px);
		box-shadow: 0 16px 48px rgba(var(--black), 15%);
	}

	.blog-featured-img {
		width: 100%;
		height: 380px;
		object-fit: cover;
		display: block;
	}

	.blog-featured-overlay {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		padding: 3em 2.5em 2em;
		background: linear-gradient(0deg, rgba(0,0,0,0.85) 0%, rgba(0,0,0,0.4) 60%, transparent 100%);
	}

	.blog-featured-tag {
		display: inline-block;
		padding: 0.2em 0.7em;
		font-size: 0.65em;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: white;
		background: rgba(255, 255, 255, 0.15);
		border-radius: 6px;
		margin-bottom: 0.8em;
		backdrop-filter: blur(4px);
	}

	.blog-featured-title {
		color: white;
		font-size: 1.8em;
		letter-spacing: -0.02em;
		margin-bottom: 0.4em;
	}

	.blog-featured-desc {
		color: rgba(255, 255, 255, 0.75);
		font-size: 0.9em;
		line-height: 1.5;
		margin-bottom: 0.8em;
		max-width: 600px;
	}

	.blog-featured-date {
		font-size: 0.78em;
		color: rgba(255, 255, 255, 0.5);
	}

	/* Grid */
	.blog-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1.2em;
	}

	.blog-card {
		display: block;
		background: white;
		border: 1px solid rgb(var(--gray-light));
		border-radius: 16px;
		overflow: hidden;
		transition: all 0.3s ease;
	}

	.blog-card:hover {
		transform: translateY(-3px);
		box-shadow: 0 12px 36px rgba(var(--gray), 15%);
		border-color: rgba(35, 55, 255, 0.12);
	}

	.blog-card:hover .blog-card-title {
		color: var(--accent);
	}

	.blog-card-img {
		width: 100%;
		height: 180px;
		object-fit: cover;
		border-radius: 0;
	}

	.blog-card-info {
		padding: 1.3em 1.5em;
	}

	.blog-card-tag {
		display: inline-block;
		padding: 0.2em 0.7em;
		font-size: 0.65em;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: var(--accent);
		background: rgba(35, 55, 255, 0.06);
		border-radius: 6px;
		margin-bottom: 0.6em;
	}

	.blog-card-title {
		font-size: 1.05em;
		line-height: 1.35;
		margin-bottom: 0.4em;
		transition: color 0.2s ease;
	}

	.blog-card-excerpt {
		font-size: 0.82em;
		color: rgb(var(--gray));
		line-height: 1.55;
		margin-bottom: 0.8em;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.blog-card-date {
		font-size: 0.75em;
		color: rgb(var(--gray));
		font-weight: 500;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.blog-title { font-size: 2.2em; }
		.blog-featured-img { height: 260px; }
		.blog-featured-title { font-size: 1.3em; }
		.blog-featured-overlay { padding: 2em 1.5em 1.5em; }
		.blog-grid { grid-template-columns: 1fr; }
	}
</style>
